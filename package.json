{
  "name": "inventory-ware",
  "version": "0.2.1",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "webapp",
    "shared",
    "pocketbase"
  ],
  "scripts": {
    "setup": "node --env-file-if-exists=./.env scripts/setup-pocketbase.js",
    "dev": "concurrently \"yarn workspace @project/webapp dev\" \"yarn workspace @project/shared dev\" \"yarn workspace @project/pb dev\"",
    "build": "yarn workspaces foreach -A run build",
    "test": "yarn workspace @project/shared test && yarn workspace @project/webapp test",
    "test:watch": "concurrently \"yarn workspace @project/shared test:watch\" \"yarn workspace @project/webapp test:watch\"",
    "lint:check": "yarn workspaces foreach -A run lint",
    "lint": "yarn workspaces foreach -A run lint:fix",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "format": "yarn workspaces foreach -A run format",
    "format:check": "yarn workspaces foreach -A run format:check",
    "precommit": "yarn run format && yarn run lint && yarn run typecheck && yarn run test",
    "clean": "yarn workspaces foreach -R run clean && rm -rf pocketbase/pocketbase",
    "typegen": "yarn workspace @project/shared typegen",
    "db:migrate": "yarn workspace @project/shared migrate:generate",
    "db:status": "yarn workspace @project/shared migrate:status",
    "db:start": "yarn workspace @project/pb dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
